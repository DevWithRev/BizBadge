@model TeacherModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Teacher</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Edit Teacher Details</h2>
        <form asp-action="UpdateTeacher" asp-controller="Teachers" method="post" >
            <div class="card p-4 shadow">
                <input type="hidden" asp-for="TeacherId" />
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" required/>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" required/>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Gender" class="form-label"></label>
                        <select asp-for="Gender" class="form-select">
                            <option value="">-- Select Gender --</option>
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DateOfBirth" class="form-label"></label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control"></textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Qualification" class="form-label"></label>
                        <input asp-for="Qualification" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ExperienceYears" class="form-label"></label>
                        <input asp-for="ExperienceYears" class="form-control" type="number" min="0" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Department" class="form-label"></label>
                        <input asp-for="Department" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="JoiningDate" class="form-label"></label>
                        <input asp-for="JoiningDate" class="form-control" type="date" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                    
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-controller="Teachers" asp-action="ListOfTeachers" class="btn btn-warning">Back</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
