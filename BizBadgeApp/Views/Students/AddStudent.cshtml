@model StudentModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Add Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
    <div class="container">
        <h2 class="mb-4">Add Student to @ViewBag.ClassId</h2>

        <form asp-action="AddStudent" method="post">
            <!-- Hidden field to send ClassId to controller -->
            <input type="hidden" asp-for="ClassId" value="@ViewBag.ClassId" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" required />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FatherName" class="form-label"></label>
                    <input asp-for="FatherName" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MotherName" class="form-label"></label>
                    <input asp-for="MotherName" class="form-control" required />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MobileNumber" class="form-label"></label>
                    <input asp-for="MobileNumber" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Age" class="form-label"></label>
                    <input asp-for="Age" class="form-control" required/>
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>
                @if (ViewData["Succes"] != null)
                {
                    <div class="alert alert-success justify-content-center">
                        @ViewData["Succes"]
                    </div>
                }

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Add Student</button>
                
                    <a asp-action="StudentDetils" asp-controller="Students" asp-route-id="@ViewBag.ClassId" class="btn btn-danger">Back</a>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
