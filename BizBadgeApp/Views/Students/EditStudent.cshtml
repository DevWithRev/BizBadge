@model StudentModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Edit Student</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
    <div class="container">
        <h2 class="mb-4">Edit Student: @Model.FirstName @Model.LastName</h2>

        <form asp-action="EditStudent" method="post">
            <!-- Hidden fields for StudentId and ClassId -->
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ClassId" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" required />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FatherName" class="form-label"></label>
                    <input asp-for="FatherName" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="MotherName" class="form-label"></label>
                    <input asp-for="MotherName" class="form-control" required />
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="MobileNumber" class="form-label"></label>
                    <input asp-for="MobileNumber" class="form-control" required />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Age" class="form-label"></label>
                    <input asp-for="Age" class="form-control" required />
                </div>

                <div class="col-12 mb-3">
                    <label asp-for="Address" class="form-label"></label>
                    <input asp-for="Address" class="form-control" />
                </div>

                @if (ViewData["Success"] != null)
                {
                    <div class="alert alert-success">
                        @ViewData["Success"]
                    </div>
                }

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-success">Update Student</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
