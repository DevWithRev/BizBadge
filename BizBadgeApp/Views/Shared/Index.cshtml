@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body style="background-color: #f8f9fa;">

    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px;">
            <h4 class="text-center mb-4"><i class="fas fa-school"></i>Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link text-white" asp-action="Student" asp-controller="Students" ><i class="fas fa-user-graduate me-2"></i>Students</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-action="SubjectsList" asp-controller="Subjects"><i class="fas fa-book-open me-2"></i>Subjects</a></li>
                <li class="nav-item"><a class="nav-link text-white" asp-action="ListOfTeachers" asp-controller="Teachers"><i class="fas fa-book-open me-2"></i>Teachers</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#"><i class="fas fa-user-shield me-2"></i>Parents</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#"><i class="fas fa-file-invoice-dollar me-2"></i>Accountants</a></li>
                <li class="nav-item"><a class="nav-link text-white" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
            </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            <h2 class="mb-4">Welcome, Admin @ViewBag.UserName</h2>
            @model WeatherResponse

            <form asp-action="Index" asp-controller="Weather" method="post">
                <input type="text" name="city" placeholder="Enter city" />
                <button type="submit">Get Weather</button>
            </form>

            @if (Model != null)
            {
                <h3>📍 @Model.Location.Name, @Model.Location.Country</h3>
                <p>🕒 Local Time: @Model.Location.Localtime</p>
                <p>🌡️ Temperature: @Model.Current.Temp_C &deg;C (Feels like @Model.Current.Feelslike_C &deg;C)</p>
                <p>🌥️ Condition: @Model.Current.Condition.Text</p>
                <img src="https:@Model.Current.Condition.Icon" alt="icon" />
                <p>💨 Wind: @Model.Current.Wind_Kph km/h (@Model.Current.Wind_Dir)</p>
                <p>💧 Humidity: @Model.Current.Humidity%</p>
                <p>☁️ Cloud Cover: @Model.Current.Cloud%</p>
                <p>🌬️ Pressure: @Model.Current.Pressure_Mb mb</p>
                <p>🔆 UV Index: @Model.Current.Uv</p>

                <h4>🌫️ Air Quality</h4>
                <p>CO: @Model.Current.Air_Quality.Co</p>
                <p>NO₂: @Model.Current.Air_Quality.No2</p>
                <p>O₃: @Model.Current.Air_Quality.O3</p>
                <p>PM2.5: @Model.Current.Air_Quality.Pm2_5</p>
                <p>PM10: @Model.Current.Air_Quality.Pm10</p>
                <p>US EPA Index: @Model.Current.Air_Quality.Us_Epa_Index</p>
            }
            else
            {
                <p>No data found</p>
            }

         
        </div>
    </div>

    <!-- JS Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>
